<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EastTentCampsiteActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="213dp"
                android:layout_marginTop="0dp"
                android:alpha="250"
                android:src="@drawable/lakecloudview"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textLakeMission"
                android:layout_width="405dp"
                android:layout_height="101dp"
                android:layout_marginTop="-150dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="@string/text_textlakeMission"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textContactLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="50dp"
                android:text="@string/text_textContactLabel"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/phoneMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_phoneMain"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textContactLabel" />

            <TextView
                android:id="@+id/emailMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="131dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_emailMain"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneMain" />

            <TextView
                android:id="@+id/textEastCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_textEastCampHost"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailMain" />

            <TextView
                android:id="@+id/phoneEastCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_phoneEastCampHost"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textEastCampHost" />

            <TextView
                android:id="@+id/emailEastCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="123dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_emailEastCampHost"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneEastCampHost" />

            <TextView
                android:id="@+id/textWestCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_textWestCampHost"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailEastCampHost" />

            <TextView
                android:id="@+id/emailWestCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_emailWestCampHost"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneWestCampHost" />

            <TextView
                android:id="@+id/phoneWestCampHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_phoneWestCampHost"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textWestCampHost" />

            <TextView
                android:id="@+id/textEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_textStillwaterPolice"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailWestCampHost" />

            <TextView
                android:id="@+id/phoneEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_phoneStillwaterPolice"
                android:textColor="@color/design_default_color_secondary_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textEmergencyContact" />

            <View
                android:id="@+id/divider"
                android:layout_width="409dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="626dp" />

            <TextView
                android:id="@+id/AmenitiesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/text_Amenities"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <FrameLayout
                android:id="@+id/layout_AdventureCamp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/image_AdventureCamp"
                    android:layout_width="166dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/adventurecamp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_adventureCamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="150dp"
                    android:text="@string/text_AdventureCamp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/image_camping"
                    android:layout_width="197dp"
                    android:layout_height="131dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/camping"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/text_camping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="100dp"
                    android:text="@string/text_camping"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_discGolf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/image_diskGolf"
                    android:layout_width="166dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/diskgolf"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_diskGolf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="150dp"
                    android:text="@string/text_diskGold"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/image_fishing"
                    android:layout_width="197dp"
                    android:layout_height="131dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/fishing"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/text_fishing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="100dp"
                    android:text="@string/text_fishing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_hikingBiking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/image_hikingBiking"
                    android:layout_width="166dp"
                    android:layout_height="129dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/trails"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_hikingBiking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:text="@string/text_hikingBiking"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/image_kayaking"
                    android:layout_width="197dp"
                    android:layout_height="131dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/kayaking"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/text_kayaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="100dp"
                    android:text="@string/text_kayaking"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_pavilionRentals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/image_PavilionRentals"
                    android:layout_width="253dp"
                    android:layout_height="129dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pavilion"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_pavilion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="150dp"
                    android:text="@string/text_pavilition"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textStyle="bold" />

            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>