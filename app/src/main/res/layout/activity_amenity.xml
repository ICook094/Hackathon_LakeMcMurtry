<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmenityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_AdventureCamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_AdventureCamp"
                android:layout_width="166dp"
                android:layout_height="129dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/adventurecamp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_adventureCamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:text="@string/text_AdventureCamp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/image_camping"
                android:layout_width="197dp"
                android:layout_height="131dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/camping"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/text_camping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="150dp"
                android:layout_marginRight="100dp"
                android:text="@string/text_camping"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_discGolf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_diskGolf"
                android:layout_width="166dp"
                android:layout_height="129dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/diskgolf"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_diskGolf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="150dp"
                android:text="@string/text_diskGold"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/image_fishing"
                android:layout_width="197dp"
                android:layout_height="131dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/fishing"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/text_fishing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="150dp"
                android:layout_marginRight="100dp"
                android:text="@string/text_fishing"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_hikingBiking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_hikingBiking"
                android:layout_width="166dp"
                android:layout_height="129dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/trails"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_hikingBiking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:text="@string/text_hikingBiking"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/image_kayaking"
                android:layout_width="197dp"
                android:layout_height="131dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/kayaking"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/text_kayaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="150dp"
                android:layout_marginRight="100dp"
                android:text="@string/text_kayaking"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_pavilionRentals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/image_PavilionRentals"
                android:layout_width="253dp"
                android:layout_height="129dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pavilion"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_pavilion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:text="@string/text_pavilition"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>