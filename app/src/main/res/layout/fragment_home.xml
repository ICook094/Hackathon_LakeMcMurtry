<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="213dp"
                android:layout_marginTop="0dp"
                android:alpha="250"
                android:src="@drawable/lakecloudview"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textLakeMission"
                android:layout_width="405dp"
                android:layout_height="101dp"
                android:layout_marginTop="-150dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:text="@string/text_textlakeMission"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <FrameLayout
                android:id="@+id/goToLakeDirections"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/buttonToLake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:clickable="true"
                    android:onClick="onClickOpenDirectionsToLake"
                    app:srcCompat="@android:drawable/ic_menu_mylocation"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:layout_editor_absoluteX="200dp"
                    tools:layout_editor_absoluteY="209dp" />

                <TextView
                    android:id="@+id/lakeLocation"
                    android:layout_width="234dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/text_Location"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </FrameLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="418dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="626dp" />

            <Button
                android:id="@+id/button_ContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="ContactActivity"
                android:text="@string/button_contact"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testbutton6"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button_AmenityActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="AmenityActivity"
                android:text="@string/text_Amenities"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testbutton6"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/testbutton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:onClick="RulesActivity"
                android:text="@string/text_rulesRegs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testbutton" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>